  <div class="container-fluid">
    <%# <%= link_to "<img class='navbar-brand' src='FarmFresh_2.png'>".html_safe, root_path %>
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "FarmFresh_2.png" %>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

  <div class="row justify-content-center align-items-center">
    <div class="input-group">
      <div class="form-outline">
        <input type="search" id="form1" class="form-control" placeholder="Search for produce....."/>
        <%# <label class="form-label" for="form1">Search</label> %>
      </div>
        <button type="button" class="btn btn-primary">
          <i class="fas fa-search"></i>
        </button>
    </div>
  </div>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <%= link_to "Home", root_path, class: "btn-farm-light" %>

      <ul class="navbar-nav me-auto">
