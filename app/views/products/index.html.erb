<div class = "index-head">
   <h1>Welcome to FarmFresh</h1>
   <h3>Rent the freshest fake fruit from  your friendliest farm!<h3>
</div>
<div class = "content">
  <div class = "cards">
    <% @products.each do |product| %>
        <%= link_to product_path(product) do %>
            <div class="card-product">
              <%= cl_image_tag product.image_url.key, height: 300, width: 400, crop: :fit %>
                <div class="card-product-infos">
                  <div class= "card-product-info">
                    <p class= "product-title"><%= product.name %></p>
                    <p class= "product-price">Â£<%= product.price %></p>
                  </div>
                    <p class= "product-description">Description: <%= product.overview %></p>
                </div>
            </div>
        <% end %>
    <% end %>
  </div>
  <div id="map">
    <div style="width: 100%; height: 100%;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
    </div>
</div>
