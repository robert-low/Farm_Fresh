<h1 style="text-align: center; margin-top: 20px;">Add New Product</h1>
<div class="create-container">
<div class="container">
<%= simple_form_for(@product) do |f| %>
  <%= f.input :name %>
  <%= f.input :overview %>
  <%= f.input :price %>
  <%= f.input :image_url, as: :file %>
  <%= f.input :location,
  input_html: {data: {location_autocomplete_target: "location"}},
  wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
  <%= f.submit %>
<% end %>
</div>
</div>
